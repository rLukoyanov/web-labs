{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "target": "ESNext",
    "noEmit": false, // обязательно!
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
